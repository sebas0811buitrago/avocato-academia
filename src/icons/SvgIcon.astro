---
import { cva, type VariantProps } from "class-variance-authority"
import { cn } from "../utils/cn"

type OmitTypes = "fill" | "width" | "height"

const iconVariants = cva("h-[1em] fill-current", {
	variants: {
		color: {
			primary: "text-primary",
			accent: "text-accent",
			foreGroundColor: "text-foreground-color",
		},
		size: {
			xs: "text-[1rem]",
			sm: "text-[1.5rem]",
			base: "text-[2rem]",
			lg: "text-[2.5rem]",
			xl: "text-[3rem]",
		},
	},
	defaultVariants: {
		color: "primary",
		size: "base",
	},
})

export type Props = VariantProps<typeof iconVariants> & Omit<astroHTML.JSX.SVGAttributes, OmitTypes>

const { color, size, class: className, ...rest } = Astro.props
---

<svg {...rest} fill="currentColor" class={cn(iconVariants({ color, size, className }))}>
	<slot />
</svg>
