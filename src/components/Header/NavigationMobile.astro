---
import FacebookIcon from "@/icons/FacebookIcon.astro"
import InstagramIcon from "@/icons/InstagramIcon.astro"
import WhatsappIcon from "@/icons/WhatsappIcon.astro"
import { cn } from "@/utils/cn"
import type { HTMLAttributes } from "astro/types"
import Button from "../Button.astro"
import ButtonNavigation from "./ButtonNavigation.astro"
import { hideElementClasses } from "./constants"

type Props = HTMLAttributes<"nav">
const absolutePosition = "absolute right-0 top-full z-10"

const { class: className, ...props } = Astro.props
---

<nav
	id="navigation-menu"
	class:list={[
		cn(
			"flex w-full flex-col gap-3 bg-light-primary p-4 transition-opacity duration-300 ease-in-out",
			className
		),
		hideElementClasses,
		absolutePosition,
	]}
	{...props}
>
	<ul>
		<li class="">
			<a href="/">
				<ButtonNavigation> Inicio</ButtonNavigation>
			</a>
		</li>
		<li class="">
			<a href="/">
				<ButtonNavigation> Servicios</ButtonNavigation>
			</a>
		</li>
		<li class="">
			<a href="/">
				<ButtonNavigation> Nosotros</ButtonNavigation>
			</a>
		</li>
		<li class="">
			<a href="/">
				<ButtonNavigation> Blog</ButtonNavigation>
			</a>
		</li>

		<li class="mt-5 flex justify-center">
			<a href="/">
				<Button
					class="duration-250 bg-accent text-foreground-color transition ease-in-out hover:bg-dark-primary"
				>
					Cont√°ctanos ahora</Button
				>
			</a>
		</li>
	</ul>

	<ul class="ga flex justify-center gap-3">
		<li class="">
			<a href="/" aria-label="go to facebook"> <FacebookIcon /> </a>
		</li>
		<li class="">
			<a href="/" aria-label="go to instagram"> <InstagramIcon /> </a>
		</li>
		<li class="">
			<a href="/" aria-label="go to whatsapp"> <WhatsappIcon /> </a>
		</li>
	</ul>
</nav>
