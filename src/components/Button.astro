---
import { cn } from "@/utils/cn"
import type { HTMLAttributes } from "astro/types"

type ComponentType = "button" | "a"

export type Props<TComponentType extends ComponentType> = {
	component?: TComponentType
} & HTMLAttributes<TComponentType>

const { class: className, component: Component = "button", ...props } = Astro.props
---

<Component
	class={cn("rounded-full  px-4 py-2 flex gap-2 justify-center items-center", className)}
	{...props}
>
	<slot /></Component
>
