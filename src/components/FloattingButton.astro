---
import { cn } from "@/utils/cn"
import type { HTMLAttributes } from "astro/types"

type ComponentType = "button" | "a"

export type Props<TComponentType extends ComponentType> = {
	component?: TComponentType
} & HTMLAttributes<TComponentType>

const { class: className, component: Component = "button", ...props } = Astro.props
---

<Component
	class={cn(
		"rounded-full  px-4 shadow-xl flex bg-foreground-color justify-center items-center  text-primary hover:bg-accent hover:text-foreground-color",
		className
	)}
	{...props}
>
	<slot /></Component
>
