---
import LayoutBlog from "@/layouts/LayoutBlog.astro"
import { getCollection, getEntry } from "astro:content"

export async function getStaticPaths() {
	const blogEntries = await getCollection("posts")

	return blogEntries.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}))
}

const { slug } = Astro.params

const { data: post, render: renderPost } = await getEntry("posts", slug)

const { Content: ContentPost } = await renderPost()

const { data: author } = await getEntry("authors", post.author.slug)
---

<LayoutBlog post={post} author={author}> <ContentPost /></LayoutBlog>
